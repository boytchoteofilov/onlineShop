@model DinamicMenuViewModel

<li class="dropdown">
    <a asp-controller="Drink"
       asp-action="List"
       class="dropdown-toggle" data-toggle="dropdown">Drinks<b class="caret"></b></a>

    <ul class="dropdown">
        @foreach (var category in Model.Categories)
        {

            <li><a asp-controller="Drink" asp-action="List" asp-route-category="@category.CategoryName">@category.CategoryName </a></li>
        }
            <li class="divider"></li>
            <li><a asp-controller="Drink" asp-action="List" asp-route-category=""></a>List all categories</li>
        
    </ul>

</li>
